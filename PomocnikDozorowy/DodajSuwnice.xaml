<Window x:Class="PomocnikDozorowy.DodajSuwnice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomocnikDozorowy"
        mc:Ignorable="d"
        Title="Dodaj Suwnice" Height="600" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Dane Techniczne:" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Tb_ID" HorizontalAlignment="Left" Margin="173,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID Suwnicy" HorizontalAlignment="Left" Margin="60,60,0,0" VerticalAlignment="Top"/>
        <Label Content="Nr Fabryczny" HorizontalAlignment="Left" Margin="60,91,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Tb_NrFabryczny" HorizontalAlignment="Left" Margin="173,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Rok produkcji" HorizontalAlignment="Left" Margin="60,122,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Tb_RokProdukcji" HorizontalAlignment="Left" Margin="173,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Udzwig nominalny" HorizontalAlignment="Left" Margin="60,153,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Tb_UdzwigNominalny" HorizontalAlignment="Left" Margin="173,157,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Producent" HorizontalAlignment="Left" Margin="60,184,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Tb_Producent" HorizontalAlignment="Left" Margin="173,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Btn_Zapisz" Content="Zapisz" HorizontalAlignment="Left" Margin="150,243,0,0" VerticalAlignment="Top" Click="Btn_Zapisz_Click"/>


    </Grid>
</Window>
