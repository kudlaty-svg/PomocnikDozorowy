<Window x:Class="PomocnikDozorowy.OknaPomocnicze.OknoHaslo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomocnikDozorowy.OknaPomocnicze"
        mc:Ignorable="d"
        Title="Autoryzacja" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" >
    <StackPanel Margin="20">
        <TextBlock Text="Podaj hasło:" />
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

        <Button Content="OK"
                Click="Ok_Click"
                Margin="0,5,0,0"/>
    </StackPanel>
</Window>
